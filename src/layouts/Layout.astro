---
import "@fontsource/kumbh-sans/400.css";
import "@fontsource/kumbh-sans/700.css";
import "@fontsource/kumbh-sans/variable.css";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/ecommerce-product-page/favicon.svg"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="relative max-w-screen-xl mx-auto">
    <slot />
  </body>
</html>
